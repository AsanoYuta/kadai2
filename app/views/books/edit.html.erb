<body>
<h1>Editing Book</h1>
<% if @book.errors.any? %>
<form>
<error>
  <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</error>
<% else %>
<% end %>
<%= form_with model: @book do |f| %>

<field>
<label>Title</label>
<%= f.text_field :title %>
</field>
<field>
<label>Body</label>
<%= f.text_area :body %>
</field>

<field>
<%= f.submit 'Update Book',class: "botan" %>
</field>
<form>
<% end %>
<lk><%= link_to "Show",book_path(@book.id) %>
 |
<%= link_to "Back", books_path %></lk>

</body>